template(name='actionLayout')
  .ui.padded.grid.stackable
    .three.wide.column(style="border-right: solid 1px lightgrey;padding: 1.5em;")
      h3.ui.header
        img.ui.image(src="#{maintainer.profile.picture}")
        .content #{maintainer.username}
      .ui.divider
      .ui.vertical.fluid.secondary.menu
        a.active.item(data-tab="overview") Overview
        a.item(data-tab="messages") Messages

    .thirteen.wide.column.streched(style="padding: 0")
      .ui.active.attached.tab(data-tab="overview")
        +actionOverview
      .ui.attached.tab(data-tab="messages")
        +subMessages
