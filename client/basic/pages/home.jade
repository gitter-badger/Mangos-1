template(name='home')
  #main
    h1 Welcome
    form.ui.form.editProfile
      .two.fields
        .field
          +dropzone(contentType='images' fileTypes='.jpg .png' formData=specificFormData)
        .field
          .field
            .label Firstname
            .ui.massive.transparent.input
              input(type="text" name="firstname" placeholder="firstname" value="#{user.profile.firstname}")
          .field
            .label Lastname
            .ui.massive.transparent.input
              input(type="text" name="lastname" placeholder="lastname" value="#{user.profile.lastname}")
          .field
            .label ImageUrl
            .ui.massive.transparent.input
              input(type="text" value="#{user.imageUrl}")
        input(type="submit")

    .ui.very.basic.collapsing.celled.table
      thead
        tr
          th id
          th createdBy
          th createdAt
          th x1
          th x2
          th x3
      tbody
        each elements
          tr
           td
            a(href="/elements/#{_id}") #{_id}
           td #{createdBy}
           td #{createdAt}
           td #{x1.type}:#{x1.value}
           td #{x2.type}:#{x2.value}
           td #{x3.type}:#{x3.value}

  each people
    li #{_id}
