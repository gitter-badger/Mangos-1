template(name='transactions')
  #main
    .ui.feed(style="padding: 1em 3em")
      each transactions
        .event
          .label
            a(href="/people/#{createdBy._id}")
              img(src='#{createdBy.profile.picture}')
          .content
            .date #{createdAt}
            .summary
              a(href="/people/#{sender._id}") #{sender.username}
              | has given #{mangos} Mangos to the
              a(href="/organisations/#{organisation._id}") #{organisation.name}
              | organisation
            .exta.text #{message}
