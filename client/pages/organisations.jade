template(name='organisations')
  #main
    form.ui.form.addOrganisation
      .two.fields
        .twelve.wide.field
          input(type="text", name="name", placeholder="Organisation name")
        .four.wide.field
          button.ui.button.fluid(type='submit') Submit new Organisation

    .ui.divider
    .ui.cards
      if Template.subscriptionsReady
        each organisations
          a.ui.card(href="{{pathFor 'orgaLayout'}}")
            .image
              img(src="#{banner}")
            .content
              img.floated.right.mini.ui.image(src="#{createdBy.profile.picture}")
              .header #{name}
              .meta #{createdBy.username}
