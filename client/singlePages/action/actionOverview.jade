template(name="actionOverview")
  h3(style="font-weight: 300; margin-top: 0.5em; padding: 0.5em 2em") #{name}

  .ui.divider
  .ui.tiny.statistics(style="padding: 0.5em 2em")
    .statistic
      .value #{time}
      .label Min invested
    .statistic
      .value #{factor}
      .label Factor
    .statistic
      .value #{mangosWanted}
      .label Mangos wanted
    .statistic
      .value #{mangosReceived}
      .label Mangos received
    .statistic
      .value #{mangosReceivedExtra}
      .label Mangos Extra

  .ui.divider
  .ui.feed(style="padding: 1em 3em")
      each transactions
        .event
          .label
            a(href="/people/#{sender._id}")
              img(src='#{createdBy.profile.picture}')
          .content
            .date #{createdAt}
            .summary
              a(href="/people/#{sender._id}") #{sender.username}
              | has given #{mangos} Mangos
            .exta.text #{message}
